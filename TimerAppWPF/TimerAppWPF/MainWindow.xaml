<Window x:Class="TimerAppWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>
        <Canvas x:Name="canvas" Margin="10"/>
        <Grid Grid.Row="1" Margin="10" >
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Button Content="Start" Margin="5" Grid.Row="0" Grid.Column="0" Click="Start_Click" />
            <Button Content="Stop" Margin="5" Grid.Row="0" Grid.Column="1" Click="Stop_Click" />
            <Button Content="Multi start" Margin="5" Grid.Row="1" Grid.Column="0" Click="StartMultiple_Click" />
            <Button Content="Multi stop" Margin="5" Grid.Row="1" Grid.Column="1" Click="StopMultiple_Click" />
        </Grid>
    </Grid>
</Window>
