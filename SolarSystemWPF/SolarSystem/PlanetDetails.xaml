<Window x:Class="SolarSystemWPF.PlanetDetails"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PlanetDetails" Height="300" Width="300">
    <Grid x:Name="grid" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <Label Content="Bolygó neve: " />
            <Label Content="Naptól mért távolság: " />
            <Label Content="Keringési idő: " />
            <Label Content="Aktuális helyzet (fok): " />
            <Label Content="Egyelnítői sugár" />        
        </StackPanel>
        <StackPanel Grid.Column="1">
            <Label Content="{Binding Path=Name}" />
        </StackPanel>
    </Grid>
</Window>
