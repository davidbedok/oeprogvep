<Window x:Class="ShapeWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250*"/>
            <ColumnDefinition Width="267*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="41*"/>
            <RowDefinition Height="39*"/>
        </Grid.RowDefinitions>
        <Ellipse Fill="#00EE00" Stroke="Black" Margin="10" MouseWheel="Ellipse_MouseWheel"/>
        <Rectangle Grid.Column="1" Fill="AliceBlue" Margin="10" Stroke="Black" />
        <Line Grid.Row="1" Stroke="Black" StrokeThickness="4" X1="10" Y1="10" X2="100" Y2="100" />
        <Polygon Margin="10" Grid.Row="1" Grid.Column="1" Points="10,10 30,130 200,20" Stroke="Purple" StrokeThickness="2" Stretch="Fill">
            <Polygon.Fill>
                <SolidColorBrush Color="Blue" Opacity="0.4"/>
            </Polygon.Fill>
        </Polygon>
    </Grid>
</Window>
